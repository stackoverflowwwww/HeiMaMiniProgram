page {
  padding-bottom: 90rpx;
}
.receive_address_row .user_info_row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.receive_address_row .user_info_row .user_info {
  flex: 5;
}
.receive_address_row .user_info_row .user_phone {
  flex: 2;
  text-align: right;
}
.cart_content .cart_title {
  padding: 20rpx;
  border-width: 3rpx 0;
  border-color: var(--themeColor);
  color: black;
  border-style: solid;
  font-size: 36rpx;
}
.cart_content .cart_main .cart_item {
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
}
.cart_content .cart_main .cart_item .cart_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_img_wrap img {
  width: 80%;
}
.cart_content .cart_main .cart_item .cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool {
  display: flex;
  --numToolLength: 55rpx;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .goods_num {
  width: var(--numToolLength);
  height: var(--numToolLength);
  line-height: var(--numToolLength);
  text-align: center;
}
.footer_tool {
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  --footerHeight: 90rpx;
  height: var(--footerHeight);
  display: flex;
}
.footer_tool .total_price_wrap {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.footer_tool .total_price_wrap .total_price {
  text-align: right;
  padding-right: 10rpx;
}
.footer_tool .total_price_wrap .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 36rpx;
}
.footer_tool .total_price_wrap .delivery {
  text-align: right;
  padding-right: 10rpx;
}
.footer_tool .order_pay_wrap {
  flex: 3;
  font-size: 36rpx;
  background-color: var(--themeColor);
  color: white;
  line-height: var(--footerHeight);
  text-align: center;
}
